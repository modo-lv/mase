<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<Scene fx:id="mainScene" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.MainController">
  <VBox prefHeight="480.0" prefWidth="640.0" stylesheets="@style.css">
    <MenuBar prefWidth="119.0">
      <Menu text="_File">
        <MenuItem text="_Open..." onAction="#openFile">
          <accelerator>
            <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
          </accelerator>
        </MenuItem>
        <MenuItem disable="true" text="_Save"/>
      </Menu>
    </MenuBar>
    <ToolBar prefHeight="40.0" prefWidth="200.0">
      <Button text="Open" onAction="#openFile"/>
    </ToolBar>
    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" fx:id="mainTabs" disable="true">
      <Tab text="Character">
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0">
          <VBox prefHeight="200.0" prefWidth="100.0">
            <TableView editable="true">
              <columns>
                <TableColumn prefWidth="153.0" text="Attribute"/>
                <TableColumn prefWidth="388.0" text="Value(s)"/>
                <TableColumn prefWidth="100.0" text="Actions"/>
              </columns>
              <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
              </columnResizePolicy>
            </TableView>
          </VBox>
        </ScrollPane>
      </Tab>
      <Tab text="Checksums">
        <VBox prefHeight="200.0" prefWidth="100.0">
          <Label
            text="Checksums are mathematical calculation results that ADOM uses to detect changes in save file data. Any change, no matter how small, will also change the checksums."
            wrapText="true"/>
          <TableView fx:id="checksumTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
              <TableColumn prefWidth="217.0" text="Data range"/>
              <TableColumn prefWidth="204.0" text="Current checksum"/>
              <TableColumn prefWidth="182.0" text="Checksum in file"/>
            </columns>
            <columnResizePolicy>
              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
          </TableView>
        </VBox>
      </Tab>
    </TabPane>
    <ToolBar prefHeight="40.0" prefWidth="200.0" disable="true">
      <Button mnemonicParsing="false" text="Save"/>
    </ToolBar>
  </VBox>
</Scene>